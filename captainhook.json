{
    "config": {
        "verbosity": "debug"
    },
    "commit-msg": {
        "enabled": false,
        "actions": [
            {
                "action": "\\HDNET\\Standards\\Hook\\Message\\ChrisBeams"
            },
            {
                "action": "\\HDNET\\Standards\\Hook\\Message\\JiraIssue",
                "options": {
                    "project": "HDNET"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/php-cs-fixer fix src"
            },
            {
                "action": "\\HDNET\\Standards\\Hook\\XmlHook",
                "options": {
                    "directory" : "/../../tests/data/xml/"
                }
            },
            {
                "action": "\\HDNET\\Standards\\Hook\\JsonHook",
                "options": {
                    "directory" : "/../../tests/data/json/"
                }
            },
            {
                "action": "\\HDNET\\Standards\\Hook\\YamlHook",
                "options": {
                    "directory" : "/../../tests/data/yaml/"
                }
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [
                            ["composer.json", "composer.lock"]
                        ]
                    }
                ]
            }
        ]
    },
    "post-checkout": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install",
                "options": {},
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [
                            ["composer.json", "composer.lock"]
                        ]
                    }
                ]
            }
        ]
    }
}
