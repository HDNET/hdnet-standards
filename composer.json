{
    "name": "hdnet/hdnet-standards",
    "description": "HDNET coding standards via githook mechanism",

    "autoload": {
        "psr-4": {
            "HDNET\\Standards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HDNET\\Standards\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4.9"
        }
    },
    "require": {
        "php": "^7.4||^8.0",
        "captainhook/captainhook": "^5.5",
        "seld/jsonlint": "^1.8",
        "symfony/yaml": "^5.2",
        "sclable/xml-lint": "^0.4.0",
        "ramsey/conventional-commits": "^1.1"
    },
    "require-dev": {
        "twig/twig": "^3.3",
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^2.18"
    }
}
